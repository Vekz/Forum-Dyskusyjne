@using Forum_Dyskusyjne.DAL
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MVC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        @Html.Partial("_Navbar")
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="row">
            <p class="col-6 justify-content-start">&copy; @DateTime.Now.Year - Forum Dyskusyjne | MVC | Artur Porowski, Laura Stasiulewicz</p>
            @{
                var db = new ForumDBContext();
                int registeredUsers = db.Users.ToArray().Length - 1; // -1 Because one user is system user
            }
            <p class="col-2 offset-4 justify-content-end">Registered users: @registeredUsers</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model List<string>

@{
    ViewBag.Title = "Prohibited words";
}

<h2>Prohibited words</h2>

<table class="table">
    <tr>
        <th>
            Word
        </th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @Model[i]
            </td>
            <td>
                @using (Html.BeginForm("Delete", "ProhibitedWords", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal text-center", role = "form" })) 
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="form-actions no-color">
                        <input type="hidden" name="id" value="@i"/>
                        <input type="submit" value="Delete" class="btn btn-default"/>
                    </div>
                }
            </td>
        </tr>
    }

</table>

<hr>
@{
    Html.RenderPartial("_AddWord");
}

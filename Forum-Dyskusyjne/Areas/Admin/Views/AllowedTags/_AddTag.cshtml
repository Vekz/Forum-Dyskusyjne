@using (Html.BeginForm("AddTag", "AllowedTags", new { area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal text-center", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>New tag</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group d-flex justify-content-center ">
        <textarea class="form-control col-8" rows="4" name="word"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Allow" class="btn btn-primary"/>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
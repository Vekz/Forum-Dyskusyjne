@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<Forum_Dyskusyjne.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timeout)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            <img src=@item.GetAvatar() alt="User avatar" style="height: 4rem; width: 4rem" class="border">
        </td>
        <td>
                @{
                    var roleId = item.Roles.Single().RoleId;
                    var roleName = ((IEnumerable<IdentityRole>)ViewBag.RoleList).Single(e => e.Id == roleId).Name;
                }
            @Html.DisplayFor(modelItem => roleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timeout)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
